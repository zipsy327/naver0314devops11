			switch(num)
			{
				case 1:
					System.out.print("학생수 >>");		
					inwon=sc.nextInt();
					//배열 메모리 할당
					score=new int[inwon];
					break;
				case 2:
					for(int i=0;i<score.length;i++)
					{
						System.out.print("scores["+i+"] >>");
					}
					break;
				case 3:
					
					break;
				case 4:
					
					break;

				default:
					System.out.println("** 프로그램을 종료합니다 **");
					break Exit;
			}
			System.out.println();
		}
		
	}

}









